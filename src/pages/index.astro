---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Navbar from "../components/Navbar.astro";
import Scribble from "../components/Scribble.astro";
import ScribbleLine from "../components/ScribbleLine.astro";
import Box1 from "../components/Box/Box1.astro";
import Box2 from "../components/Box/Box2.astro";
import Box3 from "../components/Box/Box3.astro";
import Box4 from "../components/Box/Box4.astro";
import Box5 from "../components/Box/Box5.astro";
import PaperBG from "../components/PaperBG.astro";
---

<Layout>
  <Navbar />
  <main class="w-full h-screen p-8 pb-20 px-32">
    <Card>
      <div
        class="grid place-content-center h-full place-items-center leading-tight text-[5vw]"
        id="card-container"
      >
        <div class="relative h-full">
          <p class="font-semibold tracking-tighter">Product Designer</p>
          <div class="absolute -top-[25px] -left-[45px]">
            <Scribble />
          </div>
        </div>
        <div class="relative h-full">
          <p class="font-semibold tracking-tighter">
            + Developer Based in India
          </p>
          <div class="absolute -bottom-[10px] right-3">
            <ScribbleLine />
          </div>
        </div>
        <div class="flex gap-x-4 place-items-center my-6">
          <button
            class="bg-orange-gr text-white rounded-xl px-8 py-2 font-semibold text-xl flex gap-2"
          >
            <div
              class="size-[12px] place-self-center"
              style="background: linear-gradient(180deg, rgb(255, 255, 255) 0%, rgb(206, 206, 206) 100%);border-radius: 50px;box-shadow: rgb(195, 195, 195) 0px 1px 0.5px 0px inset;opacity: 1;"
            >
            </div>
            Book a call
            <div class="size-[12px] place-self-center">
              <svg width="18" height="12" fill="none" id="svg110586781_284"
                ><path
                  d="M1 5.25a.75.75 0 0 0 0 1.5v-1.5Zm16.53 1.28a.75.75 0 0 0 0-1.06L12.757.697a.75.75 0 0 0-1.06 1.06L15.939 6l-4.242 4.243a.75.75 0 0 0 1.06 1.06L17.53 6.53ZM1 6.75h16v-1.5H1v1.5Z"
                  fill="#F4F4F4"></path></svg
              >
            </div>
          </button>
          <button
            class="bg-black-gr text-white rounded-xl px-8 py-2 font-semibold text-xl"
          >
            See Works
          </button>
        </div>
        <div class="relative grid grid-cols-3 gap-4">
          <Box1 />
          <Box2 />
          <Box3 />
          <Box4 />
          <Box5 />
        </div>
      </div>
    </Card>
  </main>
</Layout>
<div class="w-full h-screen p-8 pb-20 px-32">
  <div class="grid place-items-center h-full relative">
    <div class="absolute inset-0 -z-1">
      <PaperBG />
    </div>
    <p class="split | leading-tight text-5xl max-w-[30ch] text-center">
      We help startups and enterprise to establish an emotional connection
      between their products and happy engaged customers
    </p>
  </div>
</div>
<section class="w-full h-screen bg-red-200">TEST</section>

<style>
  @property --myColor1 {
    syntax: "<color>";
    initial-value: rgb(18, 18, 18);
    inherits: false;
  }

  @property --myColor2 {
    syntax: "<color>";
    initial-value: rgb(120, 120, 120);
    inherits: false;
  }
  @property --myColor3 {
    syntax: "<color>";
    initial-value: rgb(255, 129, 19);
    inherits: false;
  }

  @property --myColor4 {
    syntax: "<color>";
    initial-value: rgb(255, 159, 56);
    inherits: false;
  }
  .bg-black-gr {
    background: linear-gradient(var(--myColor1) 0%, var(--myColor2) 100%);
    box-shadow:
      rgba(0, 0, 0, 0.02) 0px 72px 29px 0px,
      rgba(0, 0, 0, 0.08) 0px 40px 24px 0px,
      rgba(0, 0, 0, 0.14) 0px 18px 18px 0px,
      rgba(0, 0, 0, 0.17) 0px 4px 10px 0px;

    transition:
      --myColor1 0.5s,
      --myColor2 0.5s;
  }
  .bg-black-gr:hover {
    --myColor1: rgb(120, 120, 120);
    --myColor2: rgb(18, 18, 18);
  }
  .bg-orange-gr {
    background: linear-gradient(var(--myColor3) 0%, var(--myColor4) 100%);
    box-shadow:
      rgba(255, 129, 19, 0.02) 0px 72px 29px 0px,
      rgba(255, 129, 19, 0.08) 0px 40px 24px 0px,
      rgba(255, 129, 19, 0.14) 0px 18px 18px 0px,
      rgba(255, 129, 19, 0.17) 0px 4px 10px 0px;

    transition:
      --myColor3 0.5s,
      --myColor4 0.5s;
  }
  .bg-orange-gr:hover {
    --myColor3: rgb(255, 159, 56);
    --myColor4: rgb(255, 129, 19);
  }
</style>

<script>
  import { gsap } from "gsap";

  import { SplitText } from "gsap/SplitText";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(SplitText, ScrollTrigger);
  const splitT = SplitText.create(".split", {
    type: "lines,words",
    autoSplit: true,
    onSplit: (self) => {
      gsap.set(self.words, { opacity: "20%" });
      gsap.to(splitT.words, {
        scrollTrigger: {
          trigger: ".split",
          start: "bottom bottom",
          end: "center center",
          scrub: true,
        },
        opacity: 1,
        stagger: 1,
      });
      return gsap.from(self.lines, {
        scrollTrigger: {
          trigger: ".split",
          start: "bottom bottom",
          end: "center center",
          scrub: true,
        },

        y: 100,
        opacity: 0,
        stagger: 0.05,
      });
    },
  });

  gsap.from(`.box-container`, {
    y: 100,
    opacity: 0,
    stagger: 0.05,
  });
</script>
