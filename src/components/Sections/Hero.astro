            <Scribble />
          </div>
        </div>
        <div class="relative h-full">
          <p class="font-semibold tracking-tighter">+ Student Based in India</p>
          <div class="absolute right-3 -bottom-[10px] max-md:hidden">
            <ScribbleLine />
