---
import Scribble from "../Scribble.astro";
import ScribbleLine from "../ScribbleLine.astro";
import GridBG from "../GridBG.astro";
import Box from "../Box.astro";
import Svg1 from "../../assets/icons/application.svg";
import Svg2 from "../../assets/icons/visual.svg";
import Svg3 from "../../assets/icons/design.svg";
import Svg4 from "../../assets/icons/website.svg";
import Svg5 from "../../assets/icons/branding.svg";
import Button from "../Button.astro";

const svgs = [Svg1, Svg2, Svg3, Svg4, Svg5];
---

<main class="p-4 flex justify-center">
  <div
    class="gray-shadow-border gray-gradient | w-full grid place-content-center place-items-center leading-tight text-[5vw] pt-[200px] pb-[100px] max-w-[1400px] rounded-4xl relative z-0"
    id="card-container"
  >
    <div class="absolute inset-0 -z-1">
      <GridBG isMasked isTranslated />
    </div>
    <div class="relative h-full">
      <p class="font-semibold tracking-tighter">Product Designer</p>
      <div class="absolute -top-[25px] -left-[45px]">
        <Scribble />
      </div>
    </div>
    <div class="relative h-full">
      <p class="font-semibold tracking-tighter">+ Developer Based in India</p>
      <div class="absolute -bottom-[10px] right-3">
        <ScribbleLine />
      </div>
    </div>
    <div class="flex gap-x-4 place-items-center my-6">
      <Button
        ><div
          class="size-[12px] place-self-center"
          style="background: linear-gradient(180deg, rgb(255, 255, 255) 0%, rgb(206, 206, 206) 100%);border-radius: 50px;box-shadow: rgb(195, 195, 195) 0px 1px 0.5px 0px inset;opacity: 1;"
        >
        </div>
        Book a call
        <div class="size-[12px] place-self-center">
          <svg width="18" height="12" fill="none" id="svg110586781_284"
            ><path
              d="M1 5.25a.75.75 0 0 0 0 1.5v-1.5Zm16.53 1.28a.75.75 0 0 0 0-1.06L12.757.697a.75.75 0 0 0-1.06 1.06L15.939 6l-4.242 4.243a.75.75 0 0 0 1.06 1.06L17.53 6.53ZM1 6.75h16v-1.5H1v1.5Z"
              fill="#F4F4F4"></path></svg
          >
        </div></Button
      >
      <button
        class="bg-black-gr text-white rounded-xl px-6 py-3 font-semibold text-xl"
      >
        See Works
      </button>
    </div>
    <div class="relative grid grid-cols-3 gap-4">
      {svgs.map((svg) => <Box {...svg} />)}
    </div>
  </div>
</main>

<script>
  import { gsap } from "gsap";
  gsap.from(`.box-container`, {
    y: 100,
    opacity: 0,
    stagger: 0.05,
  });
</script>

<style>
  @property --myColor1 {
    syntax: "<color>";
    initial-value: rgb(18, 18, 18);
    inherits: false;
  }

  @property --myColor2 {
    syntax: "<color>";
    initial-value: rgb(120, 120, 120);
    inherits: false;
  }

  .bg-black-gr {
    background: linear-gradient(var(--myColor1) 0%, var(--myColor2) 100%);
    box-shadow:
      rgba(0, 0, 0, 0.02) 0px 72px 29px 0px,
      rgba(0, 0, 0, 0.08) 0px 40px 24px 0px,
      rgba(0, 0, 0, 0.14) 0px 18px 18px 0px,
      rgba(0, 0, 0, 0.17) 0px 4px 10px 0px;

    transition:
      --myColor1 0.5s,
      --myColor2 0.5s;
  }
  .bg-black-gr:hover {
    --myColor1: rgb(120, 120, 120);
    --myColor2: rgb(18, 18, 18);
  }
</style>
